<?xml version="1.0"?>
<ruleset name="Custom Ruleset for Apex CRUD Violations"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 
                             http://pmd.sourceforge.net/ruleset_2_0_0.xsd">

    <description>
        Custom ruleset to check for Apex CRUD violations using the ApexCRUDViolation rule.
    </description>

    <!-- Reference the existing PMD ruleset that includes ApexCRUDViolation -->
    <rule ref="rulesets/apex/security.xml">
        <!-- This rule set should include the ApexCRUDViolation rule -->
    </rule>

    <!-- Optionally, you can define additional configuration here if needed -->
    <rule name="ApexCRUDViolation">
        <description>
            Detects Apex CRUD (Create, Read, Update, Delete) violations.
        </description>
        <!-- Configure properties if needed -->
        <!-- <properties>
            <property name="property-name" value="property-value"/>
        </properties> -->
    </rule>
</ruleset>
